{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}